  <div class="container">
    <h1>RSVP for Israel/USummer Party</h1>
    
    <form id="rsvpForm">
      <label for="name">Your Name:</label>
      <input type="text" id="name" name="name" required>

      <label for="phone">Your Phone Number:</label>
      <input type="text" id="phone" name="phone" required>
      
      <button type="submit">RSVP</button>
    </form>

    <div id="message" class="message" style="display:none;"></div>
    <div id="error" class="error" style="display:none;"></div>

    <div id="partyDetails" style="display:none; margin-top: 20px;">
      <p>
        Private party in Israel â€” location <span class="secret-info">undisclosed</span>.<br>
        Date: <span class="secret-info">To be announced</span><br>
      </p>
      <p>
        <a href="https://chat.whatsapp.com/Ge9tZ5W0jiA5nOW6tdeWRI" target="_blank">Join the WhatsApp Group</a>
      </p>
    </div>
  </div>

  <script>
    const form = document.getElementById('rsvpForm');
    const messageDiv = document.getElementById('message');
    const errorDiv = document.getElementById('error');
    const partyDetailsDiv = document.getElementById('partyDetails');

    form.addEventListener('submit', async (event) => {
      event.preventDefault();

      const name = document.getElementById('name').value;
      const phone = document.getElementById('phone').value;
      const urlParams = new URLSearchParams(window.location.search);
      const code = urlParams.get('code');

      // Clear previous messages
      messageDiv.style.display = 'none';
      errorDiv.style.display = 'none';

      try {
        const response = await fetch('https://script.google.com/macros/s/AKfycbxtKCMb6iHcsIKtAy8euR8JUJ_uNjXRbBVwrcNztcJNmJOMeYJ-6qVMGbGh9_4PnLRN/exec', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ code, name, phone })
        });

        const result = await response.json();

        if (result.success) {
          messageDiv.style.display = 'block';
          messageDiv.textContent = 'RSVP confirmed! You are ready for the party.';
          partyDetailsDiv.style.display = 'block';  // Show party details and link
        } else {
          errorDiv.style.display = 'block';
          errorDiv.textContent = 'There was an issue confirming your RSVP. Please try again.';
        }
      } catch (error) {
        errorDiv.style.display = 'block';
        errorDiv.textContent = 'Error processing the request. Please try again later.';
      }
    });
  </script>

