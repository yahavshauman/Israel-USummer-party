<body>

  <div class="container">
    <h1>Israel/USummer Party</h1>
    
    <form id="mainForm">
      <label for="code">Enter your invite code:</label>
      <input type="text" id="code" name="code" required>
      
      <button type="submit">Submit</button>
    </form>

    <div id="error" class="error" style="display:none;"></div>
  </div>

  <script>
    const form = document.getElementById('mainForm');
    const errorDiv = document.getElementById('error');

    form.addEventListener('submit', async (event) => {
      event.preventDefault();

      const code = document.getElementById('code').value;

      // Clear previous error
      errorDiv.style.display = 'none';

      try {
        const response = await fetch('https://script.google.com/macros/s/AKfycbxtKCMb6iHcsIKtAy8euR8JUJ_uNjXRbBVwrcNztcJNmJOMeYJ-6qVMGbGh9_4PnLRN/exec?code=' + code);
        const result = await response.json();

        if (result.success) {
          window.location.href = `rsvp.html?code=${code}`;  // Redirect to RSVP page if code is valid
        } else {
          errorDiv.style.display = 'block';
          errorDiv.textContent = 'Invalid code. Please try again.';
        }
      } catch (error) {
        errorDiv.style.display = 'block';
        errorDiv.textContent = 'Error processing the request. Please try again later.';
      }
    });
  </script>

</body>
